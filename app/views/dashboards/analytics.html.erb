<%unless @dirty_tweets.empty?%>
<div class="row">
  <div class="col-md-6 col-md-offset-2 col-sm-4 col-sm-offset-3 dirty-tweet-chart">
    <h1>Dirty Tweets</h1>
    <div class="row">
      <div id="dirty-word-chart"></div>
    </div>
  </div>
  <div class="col-md-4 col-sm-5">
    <h1>Feed</h1>
    <div id="twitter-feed">
      <%@dirty_tweets.each do |t|%>
        <%= t.html.html_safe %>
      <%end%>
    </div>
  </div>
</div>
<%else%>
<div class="row">
  <div class="col-md-10 col-md-offset-2 col-sm-9 col-sm-offset-3">
    <h1>Congrations!</h1>
    <h2>You do not have any Tweets with dirty words in them!</h2>
  </div>
</div>
<%end%>